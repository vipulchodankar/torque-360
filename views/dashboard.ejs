<div class="container-fluid mx-0">
  <div class="row mt-3 ml-5">
    <h3><b>Dashboard</b></h3>
  </div>

  <hr />

  <div class="row justify-content-between mb-5" id="dashboard">
    <div class="col-md-6">
      <h5 class="ml-5 mb-4">
        Welcome, <%=user.firstname%> <%=user.lastname%>!
      </h5>
      <h6 class="ml-5 my-2">Phone Number: <%=user.phonenumber%></h6>
      <h6 class="ml-5 my-2">Email: <%=user.email%></h6>
      <h6 class="ml-5 my-2">Date registered: <%=user.date%></h6>
    </div>
    <div class="col-md-4 justify-content-center">
      <div class="my-3 px-5">
        <a class="btn btn-secondary text-white" href="/cars/view">
          Display all cars
        </a>
      </div>
      <div class="my-3 px-5">
        <a class="btn btn-secondary text-white" href="/cars/add"> Add a car </a>
      </div>
      <div class="my-3 px-5">
        <a class="btn btn-secondary text-white" href="/cars/update">
          Update a car
        </a>
      </div>
      <div class="my-3 px-5">
        <a class="btn btn-secondary text-white" href="/cars/search">
          Search for a car
        </a>
      </div>
      <div class="my-3 px-5">
        <a class="btn btn-danger text-white" href="/cars/delete">
          Delete a car
        </a>
      </div>
    </div>
  </div>
</div>
