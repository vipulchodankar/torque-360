<div class="container pt-5">
  <div class="row my-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h3 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Register
        </h3>
        <% include ./partials/messages %>
        <form action="/user/register" method="POST">
          <div class="form-group">
            <input
              type="firstname"
              id="firstname"
              name="firstname"
              class="form-control text-center"
              placeholder="Enter First Name"
              value="<%= typeof firstname != 'undefined' ? firstname : '' %>"
            />
          </div>
          <div class="form-group">
            <input
              type="lastname"
              id="lastname"
              name="lastname"
              class="form-control text-center"
              placeholder="Enter Last Name"
              value="<%= typeof lastname != 'undefined' ? lastname : '' %>"
            />
          </div>
          <div class="form-group">
            <input
              type="phonenumber"
              id="phonename"
              name="phonenumber"
              class="form-control text-center"
              placeholder="Enter Phone Number"
              value="<%= typeof phonenumber != 'undefined' ? phonenumber : '' %>"
            />
          </div>
          <div class="form-group">
            <input
              type="email"
              id="email"
              name="email"
              class="form-control text-center"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              id="password"
              name="password"
              class="form-control text-center"
              placeholder="Enter Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control text-center"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
        <p class="lead mt-4 text-center">
          Have An Account? <a href="/user/login">Login Now</a>
        </p>
        <p class="lead text-center">
          Are you an admin? <a href="/admin/login">Login Now</a>
        </p>
      </div>
    </div>
  </div>
</div>
